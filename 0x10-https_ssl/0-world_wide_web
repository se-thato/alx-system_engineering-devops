#!/bin/bash

# Function to get subdomain info
get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    dig "${subdomain}.${domain}" | grep -A1 'ANSWER SECTION:' | awk -v sub="$subdomain" '
        NR==2 {
            print "The subdomain " sub " is a " $4 " record and points to " $5
        }
    '
}

domain="$1"
subdomain="$2"

if [ -z "$subdomain" ]; then
    get_subdomain_info "$domain" "www"
    get_subdomain_info "$domain" "lb-01"
    get_subdomain_info "$domain" "web-01"
    get_subdomain_info "$domain" "web-02"
else
    get_subdomain_info "$domain"